{
  "manifest_version": 2,

  "name": "Live Cricket Score",
  "description": "This extension shows live Cricket Scores",
  "version": "1.0",
  "icons": {
    "16": "/img/icon16.png",
    "48": "/img/icon48.png",
    "128": "/img/icon128.png"
     },
  "browser_action": {
    "default_title": "Show Live Cricket Score!",
    "default_icon": "/img/icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
      "tabs", "http://*/*", "https://*/*"

  ]
}
